doctype html
html
	block link
	head
		title= title
		meta(charset='utf8')
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name='description', content= description)
		if minifyAssets
			link(rel="stylesheet", href="/css/global.css")
		else
			link(rel="stylesheet", href="/css/bootstrap.css")
			link(rel="stylesheet", href="/css/app.css")
			link(rel="stylesheet", href="/css/raml.css")
			link(rel="stylesheet", href="/css/highlight.github.min.css")
			link(href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300' rel='stylesheet' type='text/css')

	body

		nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbarcollapse")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') API Doc

				#navbarcollapse.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(class="#{ title == 'Welcome' ? 'active' : ''}")
							a(href="/") Home
						for s in collections.sections
							li(class="#{ menuIndex == s.menuIndex || section == s.section ? 'active' : '' }")
								a(href=s.link)
									| #{s.sectionName}
									if s.private
										i.glyphicon.glyphicon-lock
		
		block mainContent	

		block landingPage
								
		

		.footer
			.container
				p Authors : Fabrice Clerc, Robert di Rosa
				p
					| Built with&nbsp;
					a(href="https://github.com/lotaris/apidoc-seed")=name
					| &nbsp;- #{description}
				p Version: #{version}  |  Built #{creationDate}

		if minifyAssets
			script(type="text/javascript", src="/js/global.js")
		else
			script(type="text/javascript", src="/js/jquery.min.js")
			script(type="text/javascript", src="/js/bootstrap.js")
			script(type="text/javascript", src="/js/smoothscroll.js")
			script(type="text/javascript", src="/js/app.js")
