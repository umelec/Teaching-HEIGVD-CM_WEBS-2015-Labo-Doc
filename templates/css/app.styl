.code
	background-color #f5f5f5
	padding 5px 10px 5px 10px

.light
	font-size 0.8em
	color #dd4b39

html
	position relative
	min-height 100%

body
	padding 0
	margin-bottom 60px
	background-color #f5f5f5
	font-family "Open Sans", sans-serif  

a:hover
	text-decoration underline


h1, h2, h3, p
	font-family: "Open sans"

.panel-heading h3
	font-size 1.3em
	font-weight 700

.date
	color #777
	font-size 0.6em
	font-weight 100
	font-style italic
	line-height 1em

.colorfull h1
	font-weight 700
	text-transform uppercase
	color white

.colorfull h2
	font-weight 300
	color white
	font-size 1.4 em

p
	line-height 24px
	margin-bottom 17px

table
	margin-bottom 15px

th, td
	border 1px dotted #ccc
	padding 5px 15px

th
	background-color #eee

div > p > img
	width 100%


.nav.subnav li
	&.active a
		border-left 3px solid #428bca
		margin-left -3px
	a
		padding 5px 5px

.nav > li > a > .glyphicon
	font-size 12px
	margin-left 6px

.colorfull
	background-size:100%;
	background-image: url(/img/img1.jpg);
	background-repeat: no-repeat;
	background-position: 25% bottom;
	background-color #eee
	margin-top 51px
	text-align center
	min-height 340px
	padding 5%

.mainContent
	margin-top 51px

.author
	text-align left
	font-size 0.8em
	font-style italic
	color #777


@media(max-width: 768px)
	.row .private
		margin-left 0
		padding-left 15px
		padding-top 40px
	.private--vertical-bar
			width 100%
			height 30px
	.colorfull
		background-color #eee
		margin-top 51px
		text-align center
		background-size 100%
		min-height 0px


/* expanded rows in the resource panels */
.list-group
	span
		p
			margin-bottom 0px
			margin-top 5px


/* footer of the resource panels */
.panel-footer
	padding 0px 20px 0px 0px
	text-align right
	a
		display block
		text-align right
		color #ADA9A9

/* styling for the private blog posts */
.panel-warning
	.panel-footer
		background-color #fcf8e3

span.glyphicon.glyphicon-lock
	color #555
	margin-right: 10px;
		
.private
	border solid 1px #999
	border-radius 3px
	margin 10px 0px 10px -45px
	padding 10px 10px 10px 45px
	position relative
	.glyphicon
		margin-left 7px
		margin-top 7px

.private--vertical-bar
	background-color #e7e7e7
	border-top-left-radius 3px
	border-bottom-left-radius 3px
	position absolute
	left 0
	top 0
	bottom 0
	width 30px


.footer
	position absolute
	bottom 0
	width 100%
	height 60px
	padding-top 6px

	color #999
	background-color #101010
	border-top 1px solid #e7e7e7

	text-align center
	p
		margin 0
		font-size 0.8em
		font-weight 300

