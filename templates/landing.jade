extends layout

block landingPage

		.colorfull
			.container
				.row
					.col-sm-12
						a(id="top")
						h1= title
						h2= baseline

		.container
			.row
				.col-sm-3.col-sm-push-9
					block menu
						if section && subsections[section]
							h1 Sections
							hr
							ul.nav.subnav
								for subsection in subsections[section]
									li(class="#{ title == subsection.title ? 'active' : '' }")
										a(href=subsection.link)
											| #{subsection.title}
											if subsection.private
												i.glyphicon.glyphicon-lock
				.col-sm-4.col-sm-pull-3
					a(id="top")
					block body
						div!= contents

				